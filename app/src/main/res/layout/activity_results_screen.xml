<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="download.butts.blackjack.ResultsScreenActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You Lost"
        android:id="@+id/congratsText"
        android:textIsSelectable="false"
        android:textSize="40sp"
        android:layout_above="@+id/new_balance_text"
        android:layout_marginBottom="30sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/primary_text_default_material_light"/>
    <TextView
        android:id="@+id/new_balance_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_balance_amount"
        android:layout_above="@+id/new_balance_amount"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"/>
    <TextView
        android:text="4000"
        android:id="@+id/new_balance_amount"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="40sp"
        android:maxLines="1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textColor="@color/primary_text_default_material_light" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:id="@+id/playAgainBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="127dp"
        android:onClick="playAgainBtnCallback"/>
</RelativeLayout>
